{
    "name": "Global New Tab Shortcut",
    "version": "1.1",
    "manifest_version": 2,
    "icons": {
        "128": "new-tab.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs"
    ],
    "commands": {
        "new-tab": {
            "suggested_key": {
                "default": "Alt+G",
                "mac": "Command+Shift+S",
                "linux": "Alt+G"
            },
            "description": "Switch to a new tab from any application, ready for searching!"
        },
        "new-window": {
            "description": "Switch to a new window from any application, ready for searching!"
        }
    }
}
